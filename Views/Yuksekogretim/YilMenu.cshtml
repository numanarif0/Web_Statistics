@{
ViewData["Title"] = $"{ViewBag.Yil} Yılı İstatistikleri";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewBag.Yil Yılı İstatistikleri</h2>

    <div class="row">
       

        <!-- Öğrenci Sayıları -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card menu-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-user-graduate me-2"></i>Öğrenci Sayıları
                    </h5>
                    <p class="card-text">Öğrenci istatistikleri ve dağılımları</p>
                    <div class="d-grid">
                        <a href="@Url.Action("OgrenciSayilari", "Yuksekogretim", new { year = ViewBag.Yil.Replace("-", "_") })" class="btn btn-outline-primary">
                            <i class="fas fa-chart-pie me-1"></i> Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mezun Sayıları -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card menu-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-graduation-cap me-2"></i>Mezun Sayıları
                    </h5>
                    <p class="card-text">Mezuniyet istatistikleri ve dağılımları</p>
                    <div class="d-grid">
                        <a href="@Url.Action("MezunSayilari", "Yuksekogretim", new { year = ViewBag.Yil.Replace("-", "_") })" class="btn btn-outline-primary">
                            <i class="fas fa-chart-line me-1"></i> Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Öğretim Elemanları -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card menu-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-chalkboard-teacher me-2"></i>Öğretim Elemanları
                    </h5>
                    <p class="card-text">Akademik personel istatistikleri ve dağılımları</p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("AkademikPersonel", "Yuksekogretim", new { year = ViewBag.Yil.Replace("-", "_"), akademikGorev = "profesor" })" class="btn btn-outline-primary">
                            <i class="fas fa-chart-bar me-1"></i> Akademik Görevlere Göre
                        </a>
                        <a href="@Url.Action("YabanciUyruklu", "Yuksekogretim", new { year = ViewBag.Yil.Replace("-", "_") })" class="btn btn-outline-primary">
                            <i class="fas fa-globe me-1"></i> Yabancı Uyruklu
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Özet Tablolar -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card menu-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-table me-2"></i>Özet Tablolar
                    </h5>
                    <p class="card-text">Genel istatistiksel veriler ve özet tablolar</p>
                    <div class="d-grid">
                        <a href="@Url.Action("OzetTablolar", "Yuksekogretim", new { year = ViewBag.Yil.Replace("-", "_") })" class="btn btn-outline-primary">
                            <i class="fas fa-list me-1"></i> Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 