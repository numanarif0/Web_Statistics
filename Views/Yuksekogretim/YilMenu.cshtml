@{
ViewData["Title"] = $"{ViewBag.Yil} Yılı İstatistikleri";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewBag.Yil Yılı İstatistikleri</h2>

    <div class="row">
        <!-- Özet Tablolar -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card menu-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-table me-2"></i>Özet Tablolar
                    </h5>
                    <p class="card-text">Genel istatistiksel veriler ve özet tablolar</p>
                    <a href="#" class="btn btn-outline-primary">Görüntüle</a>
                </div>
            </div>
        </div>

        <!-- Öğrenci Sayıları -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card menu-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-user-graduate me-2"></i>Öğrenci Sayıları
                    </h5>
                    <p class="card-text">Öğrenci istatistikleri ve dağılımları</p>
                    <a href="#" class="btn btn-outline-primary">Görüntüle</a>
                </div>
            </div>
        </div>

        <!-- Öğretim Elemanları -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card menu-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-chalkboard-teacher me-2"></i>Öğretim Elemanları
                    </h5>
                    <p class="card-text">Akademik personel istatistikleri</p>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Yuksekogretim", new { year = ViewBag.Yil.Replace("-", "_") })"
                           class="btn btn-outline-primary d-block mb-2">
                            Akademik Görevlere Göre Sayılar
                        </a>
                        <a href="#" class="btn btn-outline-primary d-block">
                            Yabancı Uyruklu Öğretim Elemanları
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mezun Sayıları -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card menu-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-graduation-cap me-2"></i>Mezun Sayıları
                    </h5>
                    <p class="card-text">Mezuniyet istatistikleri ve dağılımları</p>
                    <a href="#" class="btn btn-outline-primary">Görüntüle</a>
                </div>
            </div>
        </div>
    </div>
</div> 