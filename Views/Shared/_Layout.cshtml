<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YÖK İstatistikleri</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YokIstatistikWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">🎓 YÖK İstatistikleri</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Veri Karşılaştırmaları</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">İller & Harita</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Sehir" asp-action="Grafik">Şehir Bazlı Grafik</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Yıllara Göre</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ANA İÇERİK -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="bg-light text-center text-muted mt-5 py-3 border-top">
        <div>
            © @DateTime.Now.Year YÖK Veri Sunumu Projesi • <small>Hazırlayan: Numan</small>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
